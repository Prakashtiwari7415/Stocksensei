modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Stock Sentiment App"

[[workflows.workflow]]
name = "Stock Sentiment App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main_app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

